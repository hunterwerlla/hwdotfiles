# i3status configuration file.
# see "man i3status" for documentation.
general {
	colors = true
	color_good = "#BBBBBB"
	color_bad = "#CC1616"
	color_degraded = "#55858E"
	interval = 2
}

order += "battery 1"
order += "volume master"
order += "cpu_usage"
order += "disk /"
order += "disk /media/media"
order += "ethernet eth0"
order += "wireless wlan0"
order += "tztime local"

battery 1 {
    format = "%status %percentage %remaining"
	path = "/sys/class/power_supply/BAT0/uevent" 
}

volume master {
	format = " â™ª:%volume  " 
	device = "default"
	mixer = "Master"
	mixer_idx = 0
	# termsyn font
	format = "%volume "
}

cpu_usage {
	format = "%usage "
}

disk "/" {
	format = "/ %avail" 
}

tztime local {
	format = " %h-%d %H:%M"
}
